<section>
  <h2>Managing CSS is Hard</h2>
<% code 'scss' do %>
.selector {
  property: value;
}
.another-selector {
  another-property: another-value;
}
.am-i-related-to-that-stuff-above {
  seriously: 'who knows';
}
#tlec .col-b #more-tleo-promo .promo-entry {
  oh-god: 'this is really paranoid';
}
<% end %>

  <aside class="notes">
